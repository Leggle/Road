@model Road.Models.ViewModel.MachineViewModel

<div id="dialog-edit" style="background-color:gray">
    @using (Ajax.BeginForm("UpdateMach", "Machines", null, new AjaxOptions
    {
        UpdateTargetId = "update-message",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnSuccess = "updateSuccess"
    }, new { @id = "updateForm" }))
    {
        <div id="update-message" class="well">

            <fieldset>

                <legend>Machine-Info</legend>

                <div class="form-group row">
                    <label for="mach_no" class="col-xs-4 col-form-label">Number</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(model => model.Mach_No, new { @class = "form-control", @readonly = "readonly", id = "mach_no" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="mach_desc" class="col-xs-4 col-form-label">Description</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(model => model.Mach_Desc, new { type = "string", required = "required", @class = "form-control", id = "mach_desc" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="lease_rate" class="col-xs-4 col-form-label">Lease Rate</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(model => model.Lease_Rate, new { type = "number", step = "0.01", required = "required", @class = "form-control", id = "lease_rate" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="active" class="col-xs-4 col-form-label">Active</label>
                    <div class="col-xs-5">
                        @Html.EditorFor(model => model.Active, new { @class = "form-control", id = "active" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xs-4 col-form-label">Owner</label>
                    <div class="col-xs-5">
                        @Html.DropDownListFor(model => model.Owner_Num, new SelectList(Model.Owners,"Owner_Num","Owner_Name"))
                    </div>
                </div>

                <button type="submit" value="Update" id="btnUpdate" class="btn btn-primary pull-right">
                    <span class="ui-button-text">Save</span>
                </button>


            </fieldset>
        </div>

    }

</div>