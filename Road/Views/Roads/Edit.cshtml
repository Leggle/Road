@model Road.Models.ViewModel.RoadViewModel

<div id="dialog-edit" style="background-color:gray">
    @using (Ajax.BeginForm("UpdateRoad", "Roads", null, new AjaxOptions
    {
        UpdateTargetId = "update-message",
        InsertionMode = InsertionMode.Replace,
        HttpMethod = "POST",
        OnSuccess = "updateSuccess",
    }, new { @id = "updateForm" }))
    {
        <div id="update-message" class="well">

            <fieldset>

                <legend>Road-Info</legend>

                <div class="form-group row">
                    <label for="bia_no" class="col-xs-4 col-form-label">Code</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(model => model.BIA_No, new { @class = "form-control", @readonly = "readonly", id = "bia_no" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="road_desc" class="col-xs-4 col-form-label">Name</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(model => model.Road_Name, new { type = "string", required = "required", @class = "form-control", id = "road_desc" })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="miles" class="col-xs-4 col-form-label">Miles</label>
                    <div class="col-xs-5">
                        @Html.TextBoxFor(model => model.Miles, new { type = "number", required = "required", @class = "form-control", id = "miles" })
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xs-4 col-form-label">Type</label>
                    <div class="col-xs-5">
                        @Html.DropDownListFor(model => model.Type_Id, new SelectList(Model.Typess, "Type_Id", "Type_Desc"))
                    </div>
                </div>

                <button type="submit" value="Update" id="btnUpdate" class="btn btn-primary pull-right">
                    <span class="ui-button-text">Save</span>
                </button>

            </fieldset>
        </div>

    }

</div>



